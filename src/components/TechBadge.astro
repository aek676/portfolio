---
import { Icon } from "astro-icon/components";
import { TAGS, type TagKey } from "@/lib/tags";

interface Props {
	tagKey: TagKey;
}

const { tagKey } = Astro.props;
const tag = TAGS[tagKey];
---

<div
  class={`flex items-center gap-2 px-3 py-1.5 rounded-lg border shadow-sm transition-all ${tag.color}`}
>
  <Icon name={tag.icon} class="w-5 h-5" />
  <span class="text-sm font-semibold whitespace-nowrap">
    {tag.name}
  </span>
</div>
